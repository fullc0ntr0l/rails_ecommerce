<div class="item-slick2 p-l-15 p-r-15">
  <!-- Block2 -->
  <div class="block2">
    <div class="block2-img wrap-pic-w of-hidden pos-relative">
      <%= image_tag product.image.url(:medium), alt: 'IMG-PRODUCT' %>
    </div>

    <div class="block2-txt p-t-20">
      <%= link_to product.title, product.link, class: 'block2-name dis-block s-text3 p-b-5' %>

      <span class="block2-price m-text6 p-r-5">
        $<%= product.price %>
      </span>
    </div>
  </div>
</div>
