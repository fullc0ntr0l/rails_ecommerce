<h4>View item</h4>

<br />

<p class="notice"><%= notice %></p>

<div class="action-buttons">
  <%= link_to 'Back', products_path, class: 'text-button' %>
  <%= link_to 'Edit', edit_product_path(@product), class: 'text-button' %>
  <%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-button' %>
</div>

<div class="wrap-slick2">
  <div class="slick2">
    <%= render 'landing/components/product_card', product: @product %>
  </div>
</div>
